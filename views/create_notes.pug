doctype html
head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='shortcut icon' href='img/ycylogo.png' type='image/x-icon')
    // Bootstrap CSS
    link(rel='stylesheet' href='assets/bootstrap/css/bootstrap.min.css')
    // icon css
    link(rel='stylesheet' href='assets/elagent-icon/style.css')
    link(rel='stylesheet' href='assets/animation/animate.css')
    link(rel='stylesheet' href='css/style.css')
    link(rel='stylesheet' href='css/responsive.css')
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous')
    title Add Note
    style.
        .user-profile{
        border: 1px solid #cccccc;
        padding: 20px 12px 20px 12px;
        margin-top: 45px;
        min-width: 250px;
        border-radius: 5px;
        }
        .user-img img{
        /* display: block;
        margin: auto;
        border: 10px solid #fff;*/
        width: 61px;
        box-shadow: 0 0 12px 8px rgb(0 0 0 / 3%);
        }
        .dashboard{
        border: 1px solid #cccccc;
        min-width: 250px;
        margin-top: 20px;
        padding: 0px 0px 0px 0px;
        border-radius: 5px;
        background-color:#fff;
        }
        .dashboard .ul li{
        list-style: none;
        display: block;
        padding-left:20px;
        }
        .dashboard .ul li a{
        color: #000;
        padding-top: 10px;
        font-size: 20px;
        margin-left:10px;
        }
        .dashboard li .fa{
        color:#000;
        }
        .active{
        background-color:lightgrey;
        border: 1px solid #cccccc;
        padding: 10px;
        margin-bottom: 13px;
        }
        .card{
        background-color: #ff652f;
        padding: 30px;
        }
        #green{
        background-color: green;
        }
        #grey{
        background-color: grey;
        }
        .edit-prf-btn button{
        width: 240px;
        border: none;
        padding: 10px;
        border-radius: 6px;
        text-align: center;
        }
        .dashboard_nav{
        display: flex;
        justify-content: space-start;
        align-items: center;
        }
        .dashboard_nav li{
        list-style-type: none;
        margin-left: 20px;
        }
        .dashboard_nav li a{
        font-size: 18px;
        color: #000;
        }
.body_wrapper
    include _header
    section.breadcrumb_area
        img.p_absolute.bl_right(src='img/home_one/b_leaf.svg' alt='')
        img.p_absolute.star(src='img/home_one/banner_bg.png' alt='')
        img.p_absolute.wave_shap_one(src='img/blog-classic/shap_01.png' alt='')
        img.p_absolute.wave_shap_two(src='img/blog-classic/shap_02.png' alt='')
        img.p_absolute.one.wow.fadeInRight(src='img/home_one/b_man_two.png' alt='')
        .container.custom_container 
    section.doc_solution_area.mb-4
        .sidebar-menu-wrapper
            .side-bar
                .container
                    .row
                        .col-xl-12.col-md-12
                            .admin_card.latest-update-card.mt-4
                                .card-header
                                    h3 Upload Note 
                                .acard-body(style='background:#cccccc;')
                                    form
                                        .card-body
                                            .d-flex.flex-row.flex-wrap
                                                .col-md-4
                                                    .form-group
                                                        label(for='heading') Name
                                                        input.form-control(type='text')
                                                .col-md-4
                                                    .form-group
                                                        label(for='heading') Subject
                                                        input.form-control(type='text')
                                                .col-md-4
                                                    .form-group
                                                        label(for='heading') Post Date
                                                        input#heading.form-control(type='date' name='date' value='' required='')
                                                .col-md-6
                                                    .form-group
                                                        label(for='category') Note Upload
                                                        input#bannerimage.form-control(type='file' name='blog_image' placeholder='' style='padding-top: 14px; height: 62px;')
                                                .col-md-6
                                                    .form-group
                                                        label(for='buyers') Description
                                                        textarea#content.form-control(name='content' aria-hidden='true')
                                            .col-md-12
                                                .form-group.text-center
                                                    button.btn.btn-primary(type='submit') Submit
    include _footer
include _js
