                        button(name='submit')
                            i.icon_search.text-white
                            span.text-white.m-2  Search

        section.doc_solution_area.pt-5.pb-5
            .container
                .row
                    .col-md-9.questiondel
                        .ask_question.list-wrapper
                            -if(questions=='') 
                                h5.text-center.text-danger ‚ö†Ô∏è No Data Available!!! ‚ö†Ô∏è Ask A Question. ü§ó
                            each question ,index in questions
                                //-  section.container.questions_container
                                //-     .questions.col-md-8.offset-md-0
                                //-         .heading
                                //-             .profile_pic
                                //-                 img(src=`/img/users/${question.userId.photo}` height="40px" width="40px") 
                                                .details
                                                    h8 Name of Student
                                                    - let mystring=`${}`;
                                                    p Computer Science  &nbsp Ramadevi &nbsp .2days ago
                                            .question
                                                p What is Database ? Define its types ?
                                            .footer
                                                .answers
                                                    a(herf="") 3 answers
                                                        .post_answer
                                                button post your answer
                                .answer_section.q_answer_section.list-item.mt-4
                                    h5=index+1 + ': ' +`${question.question}`
                                    .d-flex.flex-row.flex-wrap.justify-content-between
                                        .col-md-8
                                            p.text-info= question.subject
                                        if user
                                            - if (question.userId.id === user.id || user.role =='admin' )
                                                .col-md-4.ml-0 
                                                    button.btn.btn-sm.btn-danger.note__change.note__delete.btn-5.answer__change.answer__delete.p-1#note__delete(data-question-id=`${question.id}`) Delete
                                    .d-flex.flex-row.flex-wrap.justify-content-between
                                        p
                                            i.fa.fa-comments.mr-2(aria-hidden='true')
                                            if !user 
                                                p.text-danger ‚ö†Ô∏è Login to view answer !!! ‚ö†Ô∏è 
                                            else 
                                                a(href=`/${question.slug}`) 
                                                    span= question.answers.length+'  Answers'

                                            p= question.creationOn.toLocaleDateString('en-in', { year:"numeric", month:"numeric", day:"numeric",hour:"numeric",minute:"numeric",second:"numeric"})

                                        p
                                            img.nav__user-img2(src=`/img/users/${question.userId.photo}` alt=`Photo of ${question.userId.photo}` class="nav__user-img" )
                                            span=question.userId.name  


                            div#pagination-container.mt-4
                    .col-md-3
                        aside
                            .status.wow.fadeInRight
                                h5 Join Our Event
                                hr
                                .butto_type_youtube.mt-2.text-white.d-flex.justify-content-between
                                    i.fab.fa-youtube.bg_primary
                                    p.text-white.mt-2(onclick="window.location='https://youtube.com/@6626'" style="cursor:pointer;") Youtube
                                .butto_type_fb.mt-2.text-white.d-flex.justify-content-between(onclick="window.location=''/ask-question")
                                    p.text-white.mt-2 Ask Question
        include _footer 
